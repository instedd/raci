.row
  .col.s12.m4
    %h2 Sistema de administración
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .row
        .input-field
          = f.label :email
          = f.email_field :email, autofocus: true
      .row
        .input-field
          = f.label :password, "Contraseña"
          = f.password_field :password, autocomplete: "off"
      - if devise_mapping.rememberable?
        .row
          .span.col.s12.m12#login_settings
            .input-field.checkbox
              = f.check_box :remember_me
              = f.label :remember_me, "Recordarme"
            .col.s12.m12.right-align
              - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
                = link_to "Olvidé mi contraseña", new_password_path(resource_name)
              %br/
              - if devise_mapping.confirmable? && controller_name != 'confirmations'
                = link_to "No recibí el mail de confirmación", new_confirmation_path(resource_name)
      .row
        .actions
          = f.submit "Iniciar sesión", class: 'btn btn-large'
.row
  .col.s12.m4
    - if devise_mapping.registerable? && controller_name != 'registrations'
      = link_to new_registration_path(resource_name), :id => "register" do
        %i.material-icons person_add
        Registar mi organización
