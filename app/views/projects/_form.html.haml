.row
  = form_for @project, class: "col s12" do |f|
    - if @project.errors.any?
      #error_explanation
        %p= "#{pluralize(@project.errors.count, "error")} no permite que se guardara el proyecto"
        %ul
          - @project.errors.full_messages.each do |msg|
            %li= msg
    .row
      .input-field.col.s12.m6
        = f.label :name
        = f.text_field :name
    .row
      .input-field.col.s12.m6
        = f.label :description
        = f.text_area :description, class: "materialize-textarea"
    .row
      .input-field.col.s12.m6
        = f.label :location
        = f.text_field :location
    .row
      .input-field.col.s6.m3
        = f.label :start_date
        = f.text_field :start_date, class: 'datepicker'
      .input-field.col.s6.m3
        = f.label :end_date
        = f.text_field :end_date, class: 'datepicker'
    .actions
      = f.submit 'Guardar', class: 'btn btn-large'
      = link_to 'Volver', projects_path, class: "btn btn-flat btn-large"

