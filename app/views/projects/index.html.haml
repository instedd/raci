- if current_user.organization
  %h2
    Proyectos de
    = current_user.organization.name
- else
  %h2 Proyectos

%table.bordered.highlight
  %thead
    %tr
      %th Name
      %th Description
      %th Organization
      %th Location
      %th Start date
      %th End date
      %th Published
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.description
        %td= project.organization_id
        %td= project.location
        %td= project.start_date
        %td= project.end_date
        %td= project.published
        %td= link_to 'Show', project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Project', new_project_path
